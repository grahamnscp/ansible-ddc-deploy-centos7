# Note extra columns; ansible_host (external aws IP ) and fqdn (name for sethostname) are used in the role tasks
#  replace dummy values..
[ucp-primary]
ucp-manager1 ansible_host=22.222.222.221 fqdn=ucp-manager1.example.com

[ucp-replica]
