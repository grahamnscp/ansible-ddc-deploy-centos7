#!/bin/sh

DOCKER_HUB_ORG={{ docker_hub_org|quote }}

if [ "$DOCKER_HUB_ORG" != "docker" ]
then
  echo "Using non-default dockerhub org; $DOCKER_HUB_ORG"
  DOCKER_HUB_USERNAME=$1
  DOCKER_HUB_PASSWORD=$2
  /bin/docker login --username $DOCKER_HUB_USERNAME --password $DOCKER_HUB_PASSWORD
fi

docker pull {{ docker_hub_org|quote }}/ucp:{{ ucp_version }} 
docker pull {{ docker_hub_org|quote }}/ucp-agent:{{ ucp_version }} 
docker pull {{ docker_hub_org|quote }}/ucp-hrm:{{ ucp_version }} 


